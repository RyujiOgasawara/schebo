<div class="container">
  <h1 class="content_title"><%= @content_title %></h1>
  <%= render partial: 'content_menu' %>
  <%= form_for(@card, url:{controller:'cards', action:'add'}) do |form| %>
  <div class="form-group">
    <label for="name">名前</label><%= form.text_field :name,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="mobile">携帯電話</label><%= form.text_field :mobile,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :"所属" %><br>
    <%= form.select :department, [["1:営業", "1:営業"], ["2:工事", "2:工事"], ["3:技術", "3:技術"], ["4:業務", "4:業務"], 
        ["5:その他", "5:その他"]], {class: "form-control"} %>
  </div>
  <div class="form-group">
    <label for="sort_key">ソートキー</label><%= form.text_field :sort_key,{class:"form-control"} %>
  </div>
  <%= form.submit "保存" %>
<% end %>
