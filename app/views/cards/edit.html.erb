<div class="container">
  <h1 class="content_title"><%= @content_title %></h1>
  <%= render partial: 'content_menu' %>
  <p>最終更新：<%= l @card.updated_at, format: :custom1 %></p>
  <a class="button" href="/cards/status_in_office/<%= @card.id %>">社内</a>
  <a class="button" href="/cards/status_go_home/<%= @card.id %>">帰宅</a>
  <br><br>
  <%= form_for(@card, url:{controller:'cards', action:'edit', id:@card.id}) do |form| %>
  <div class="form-group">
    <label for="destination">行先</label>
    <%= form.text_field :destination,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :"帰社予定時間" %><br>
    <%= form.select :schedule, [["", ""], ["10", 10], ["11", 11], ["12", 12], ["13", 13], ["14", 14], 
        ["15", 15], ["16", 16], ["17", 17], ["18", 18], ["19", 19], ["20", 20], ["NR", "NR"]], {class: "form-control"} %>
  </div>
  <div class="form-group">
    <label for="arrive_date">次回出社</label><%= form.date_field :arrive_date, {class:"form-control"} %>
  </div>
  <%= form.submit "更新" %>
  <% end %>
</div>
